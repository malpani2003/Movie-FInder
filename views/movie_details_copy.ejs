<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= object.Title  %></title>
  <% url=object.Poster %>
  <link rel="icon" href="<%=url%>" type="image/icon type">
  <!-- CSS only -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
  <link rel="stylesheet" href="css/movie_detail.css">
</head>

<body>
  <nav class="text-center p-2 mb-5">
    <h1>Movie Finder</h1>
  </nav>
  <div class="container-fluid">
    <div class="row info">
      <div class="col-lg-4">
        <% url=object.Poster %>
        <img src="<%=url%>" alt="">
      </div>
      <div class="col-lg-6 offset-lg-1 text-center">
        <h1 class="display-2"><%= object.Title  %></h1>
        <h3>Rated -: <%= object.Rated  %></h3>
        
        <h2>Released Date -: <%= object.Released %></h2>
        
        <h4>Runtime -: <%= object.Runtime %></h4>
        <!-- <h4><%= object.Type  %></h4> -->
        <h5> <%= object.Plot %></h5>
        <a href="https://www.imdb.com/title/<%=object.imdbID%>/?ref_=nv_sr_srsg_0" class="my-5" target="_blank">Open in IMBD</a> 
        
        
        
        
      </div>
    </div>
    </div>
    <div class="container">
      <div class="row text-center">
        <div class="col-md-5">
          <h1>Director</h1>
          <% director_arr=(object.Director).split(",")%>
          <% (director_arr).forEach(element => { %>
          <button class="button_dark"><%= element %></button>
          <%}); %>
            <h1>Writer</h1>
            <% writer_arr=(object.Writer).split(",")%>
            <% (writer_arr).forEach(element => { %>
              <button class="button_dark"><%= element %></button>
              <%}); %>
              
              <h1>Actors</h1>
              <% actor_arr=(object.Actors).split(",") %>
              <% (actor_arr).forEach(element => { %>
              <button class="button_dark"><%= element %></button>
              <%}); %> 
          
          
        </div>
        <div class="col-md-5 offset-md-1">
          <h1>Genre</h1>
          <% category_arr=(object.Genre).split(",") %>
          <% (category_arr).forEach(element => { %>
          <button class="button_dark"><%= element %></button>
          <%}); %> 
      
          <!-- <h1>Plot</h1> -->
          
      
          
          <h1>Language</h1>
          <% lang_arr=(object.Language).split(",") %>
          <% (lang_arr).forEach(element => { %>
          <button class="button_dark"><%= element %></button>
          <% }); %>
      
          <h1>Country</h1>
      
          <% Country_arr=(object.Country).split(",") %>
          <% (Country_arr).forEach(element => { %>
          <button class="button_dark"><%= element %></button>
          <%}); %>
      
        
        </div>
      </div>
    </div>
        
    <div class="text-center">
      <h1>Awards</h1>
    
      <h4><%= object.Awards %></h4>
   
    

    <h1>Rating</h1>
    <% (object.Ratings).forEach(element => { %>
    <h6> <li><%= element.Source %> -: <%= element.Value %></li></h6>
    <% }); %>
    <h6><li> IMDB Rating -: <%= object.imdbRating %> / 10 with <%= object.imdbVotes  %> Votes</li> 
    </h6>
    <h6><li>Meta Score -: <%= object.Metascore %></li>  </h6> 

 
    <% if((object.Boxoffice)!=null){ %>
      <h1>Box Office Collection</h1>
  
      <h4><button class="button_dark"><%= object.BoxOffice %></button></h4>
      
      <% } %> 




  
  
  <a href="/" class="btn btn-dark my-3">Back to Search</a>
    </div>
          
  </div>
  <footer class="text-center p-2">
    <h3>Made By - Pranav Malpani</h3>
   </footer>




</body>

</html>